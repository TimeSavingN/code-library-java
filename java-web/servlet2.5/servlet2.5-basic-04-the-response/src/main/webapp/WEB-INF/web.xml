<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>
    <servlet>
        <servlet-name>HelloServlet</servlet-name>
        <servlet-class>com.taogen.example.servlet.response.HelloServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HelloServlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>responseBufferingServlet</servlet-name>
        <servlet-class>com.taogen.example.servlet.response._1buffering.ResponseBufferingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>responseBufferingServlet</servlet-name>
        <url-pattern>/buffering</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ResponseHeadersServlet</servlet-name>
        <servlet-class>com.taogen.example.servlet.response._2headers.ResponseHeadersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ResponseHeadersServlet</servlet-name>
        <url-pattern>/headers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ResponseRedirectServlet</servlet-name>
        <servlet-class>com.taogen.example.servlet.response._3redirect.ResponseRedirectServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ResponseRedirectServlet</servlet-name>
        <url-pattern>/redirect</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ResponseRedirectErrorServlet</servlet-name>
        <servlet-class>com.taogen.example.servlet.response._3redirect.ResponseRedirectErrorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ResponseRedirectErrorServlet</servlet-name>
        <url-pattern>/redirectError</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>I18nServlet</servlet-name>
        <servlet-class>com.taogen.example.servlet.response._4internationalization.I18nServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>I18nServlet</servlet-name>
        <url-pattern>/i18n</url-pattern>
    </servlet-mapping>

</web-app>
