<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>

    <!-- HelloServlet -->
    <servlet>
        <servlet-name>HelloServlet</servlet-name>
        <servlet-class>com.taogen.example.servlet.request.HelloServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HelloServlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <!-- RequestParamterServlet -->
    <servlet>
        <servlet-name>HttpRequestParametersServlet</servlet-name>
        <servlet-class>com.taogen.example.servlet.request._1parameters.HttpRequestParametersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HttpRequestParametersServlet</servlet-name>
        <url-pattern>/requestParams</url-pattern>
    </servlet-mapping>

    <!-- RequestMethodServlet -->
    <servlet>
        <servlet-name>HttpRequestMethodsServlet</servlet-name>
        <servlet-class>com.taogen.example.servlet.request._0methods.HttpRequestMethodsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HttpRequestMethodsServlet</servlet-name>
        <url-pattern>/requestMethods</url-pattern>
    </servlet-mapping>

    <!-- RequestAttributeServlet -->
    <servlet>
        <servlet-name>RequestAttributeServlet</servlet-name>
        <servlet-class>com.taogen.example.servlet.request._2attributes.RequestAttributeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RequestAttributeServlet</servlet-name>
        <url-pattern>/requestAttribute</url-pattern>
    </servlet-mapping>

    <!-- RequestAttributeServlet 2 -->
    <servlet>
        <servlet-name>RequestAttributeResultServlet</servlet-name>
        <servlet-class>com.taogen.example.servlet.request._2attributes.RequestAttributeResultServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RequestAttributeResultServlet</servlet-name>
        <url-pattern>/requestAttributeResult</url-pattern>
    </servlet-mapping>

    <!-- RequestHeaderServlet -->
    <servlet>
        <servlet-name>RequestHeaderServlet</servlet-name>
        <servlet-class>com.taogen.example.servlet.request._3headers.RequestHeadersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RequestHeaderServlet</servlet-name>
        <url-pattern>/requestHeaders</url-pattern>
    </servlet-mapping>

    <!-- RequestPathServlet -->
    <servlet>
        <servlet-name>RequestPathServlet</servlet-name>
        <servlet-class>com.taogen.example.servlet.request._4request_path.RequestPathServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RequestPathServlet</servlet-name>
        <url-pattern>/requestPath/*</url-pattern>
    </servlet-mapping>
    
    <!-- PathTranslationServlet -->
    <servlet>
        <servlet-name>PathTranslationServlet</servlet-name>
        <servlet-class>com.taogen.example.servlet.request._4request_path.PathTranslationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PathTranslationServlet</servlet-name>
        <url-pattern>/requestPathTranslation</url-pattern>
    </servlet-mapping>

    <!-- CookiesServlet -->
    <servlet>
        <servlet-name>CookiesServlet</servlet-name>
        <servlet-class>com.taogen.example.servlet.request._5cookies.CookiesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CookiesServlet</servlet-name>
        <url-pattern>/cookies</url-pattern>
    </servlet-mapping>

    <!-- InternationalizationServlet -->
    <servlet>
        <servlet-name>InternationalizationServlet</servlet-name>
        <servlet-class>com.taogen.example.servlet.request._6internationalization.InternationalizationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InternationalizationServlet</servlet-name>
        <url-pattern>/i18n</url-pattern>
    </servlet-mapping>

</web-app>
